{
  "name": "simple-directory",
  "version": "7.12.2",
  "description": "Easy users and organizations management for modern Web-oriented architectures.",
  "type": "module",
  "scripts": {
    "test": "NODE_ENV=test node --experimental-strip-types --test-force-exit --test-concurrency=1 --test test-it/*.ts",
    "test-only": "NODE_ENV=test node --experimental-strip-types --test-force-exit --test-only --test-concurrency=1 --test test-it/*.ts",
    "test-deps": "docker compose --profile test up -d --wait",
    "report": "nyc report --reporter=html",
    "lint": "eslint . && npm -w ui run lint",
    "lint-fix": "eslint --fix . && npm -w ui run lint-fix",
    "dev-api": "npm -w api run dev",
    "dev-ui": "npm -w ui run dev",
    "dev-deps": "docker compose --profile dev up -d",
    "stop-dev-deps": "docker compose --profile dev stop",
    "dev-zellij": "zellij --layout .zellij.kdl",
    "build-types": "df-build-types ./",
    "prepare": "husky || true && npm install --no-save maildev@2.1.0",
    "check-types": "tsc && npm -w ui run check-types",
    "quality": "npm run test-deps && npm run lint && npm run build-types && npm run check-types && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koumoul-dev/simple-directory.git"
  },
  "workspaces": [
    "ui",
    "api"
  ],
  "author": "",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/koumoul-dev/simple-directory/issues"
  },
  "homepage": "https://github.com/koumoul-dev/simple-directory#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@data-fair/lib-node": "^1.1.1",
    "@types/accept-language-parser": "^1.5.6",
    "@types/capitalize": "^2.0.2",
    "@types/config": "^3.3.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/cookies": "^0.9.0",
    "@types/debug": "^4.1.12",
    "@types/gm": "^1.25.4",
    "@types/ldapjs": "^3.0.6",
    "@types/maildev": "^0.0.7",
    "@types/material-colors": "^1.2.3",
    "@types/memoizee": "^0.4.11",
    "@types/mjml": "^4.7.4",
    "@types/multer": "^1.4.12",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.16",
    "@types/qrcode": "^1.5.5",
    "@types/seedrandom": "^3.0.8",
    "@types/simple-oauth2": "^5.0.7",
    "commitlint": "^19.2.2",
    "eslint": "^9.10.0",
    "eslint-plugin-vue": "^9.29.0",
    "eslint-plugin-vuetify": "github:albanm/eslint-plugin-vuetify",
    "husky": "^9.1.6",
    "neostandard": "^0.11.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@data-fair/lib-types-builder": "^1.3.0"
  },
  "relativeDependencies": {
    "@data-fair/lib-common-types": "../lib/packages/common-types"
  }
}
