{
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "email"],
  "properties": {
    "id": {
      "description": "The unique id of the user",
      "type": "string"
    },
    "email": {
      "description": "The main email of the user",
      "type": "string"
    },
    "firstName": {
      "description": "First name of the user",
      "type": "string",
      "maxLength": "100"
    },
    "lastName": {
      "description": "Family name of the user",
      "type": "string",
      "maxLength": "100"
    },
    "isAdmin": {
      "description": "Is this user a global admin (independant of organizations)",
      "type": "boolean"
    },
    "maxCreatedOrgs": {
      "description": "The maximum number of organizations this user can create. -1 means indeterminate number. Fallback to a global default value if not defined.",
      "type": "number"
    },
    "birthday": {
      "description": "Birth date of the user",
      "type": "string",
      "format": "date-time"
    },
    "avatarUrl": {
      "description": "URL of this user's avatar",
      "type": "string",
      "readOnly": true
    },
    "oauth": {
      "description": "Identity rattached to oauth providers",
      "type": "object",
      "readOnly": true
    },
    "defaultOrg": {
      "type": "string"
    },
    "defaultDep": {
      "type": "string"
    },
    "ignorePersonalAccount": {
      "type": "boolean",
      "default": false
    },
    "plannedDeletion": {
      "type": "string",
      "format": "date"
    }
  }
}
